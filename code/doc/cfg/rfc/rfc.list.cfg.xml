<?xml version="1.0" encoding="ISO-8859-1"?>
<config>

  <tree>
     <delim>/</delim>
     <path>rfc</path>
  </tree>

<xmldoc>
  <xml>
    <element>
    <name>id</name>  
    <default type="text">None</default>
    </element>
  </xml>
  <xml>
    <element>
    <name>title</name>
    <default type="text">None</default>
    </element>
  </xml>
</xmldoc>

<map>
     <entry>
        <search>ID</search>
        <replace>id</replace>
     </entry>
    <entry>
        <search>TITLE</search>
        <replace>title</replace>
     </entry>
</map>
  
<script>&lt;rfc&gt;
&lt;id&gt;&lt;!--ID--&gt;&lt;/id&gt;
&lt;title&gt;&lt;!--TITLE--&gt;&lt;/title&gt;
&lt;/rfc&gt;
</script>

 <match>
   <element>id</element>
 </match>

</config>








